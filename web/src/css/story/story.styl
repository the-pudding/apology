/* CUSTOM STORY STYLE */
main
	position relative
	overflow hidden
	height 100vh
	font-weight bold
	font-family $sans

section
	position absolute
	top 0
	left 0
	display flex
	align-items flex-end
	width 100%
	height 100%
	opacity 0
	transition $fade-out ease-out

	&.is-visible
		opacity 1
		transition $fade $fade-out ease-in

.graphics, .swiper
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	user-select none

.swiper__wrapper
	height 100%

.slide
	padding 1rem
	height 100%

	p
		margin 0 auto
		padding 1rem
		border 1px solid $fg
		background $bg
		set-type-size(x-large, true)

	.img
		background-position center center
		background-size cover
		background-repeat none

	img
		margin 0 auto
		max-width 20rem

.graphic__title
	text-align center
	text-transform uppercase
	set-type-size(xx-large)

.btn
	background-color $primary
	color $bg
	font-weight bold
	font-family $sans
	set-type-size(xx-large)
	padding 0.5em
	line-height 1
