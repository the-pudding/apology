/* CUSTOM STORY STYLE */
#beeswarm
	.beeswarm__graphic
		margin 0 auto
		max-width 80rem

	figure
		position relative
		width 100%
		height 20rem

	svg, .bees
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.axis
		fill none
		stroke $gray-light
		stroke-width 2px

	.label
		font-size 15px

	.bee
		position absolute
		width 4rem
		height 4rem
		border solid 2px grey
		border-radius 50%
		background-position center center
		background-size 5rem 5rem
		transform translate(-50%, -50%)

#impact
	.impact__graphic
		display grid
		margin 0 auto
		max-width 80rem

	.graphic__zone
		position relative
		height 80vh
		background $off-white
		vertical-align middle
		text-align center

		.zone__label
			position absolute
			top 0
			left 0
			margin 0
			width 100%
			line-height 1

		span
			position absolute
			top 0
			left 0
			margin 0
			font-family $sans
			set-type-size(small)
			lin-height 1

			&:first-of-type
				text-align right
				transform translate(-50%, -100%)

			&:last-of-type
				right 0
				left auto
				text-align right
				transform translate(50%, -100%)

			&:after
				position absolute
				top 100%
				left 50%
				display block
				width 1px
				height 0.5rem
				background $fg
				content ''

	.person
		path
			fill none
			stroke $gray-light
			stroke-width 2px

		&.is-beauty path
			stroke red

