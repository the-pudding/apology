/* CUSTOM STORY STYLE */
main
	position relative
	overflow hidden
	height 100vh
	font-weight bold
	font-family $sans

section
	position absolute
	top 0
	left 0
	display flex
	align-items flex-end
	width 100%
	height 100%
	opacity 0
	transition 300ms ease-in-out

	&.is-visible
		opacity 1

.graphics, .swiper
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	user-select none

.swiper__wrapper
	height 100%

.slide
	padding 1rem
	height 100%

	p
		margin 0 auto
		padding 1rem
		max-width 40rem
		background $bg
		set-type-size(x-large, true)

.graphic__title
	text-align center
	text-transform uppercase
	set-type-size(xx-large)

.btn
	background-color $primary
	color $bg
	font-weight bold
	font-family $sans
	set-type-size(xx-large)
	padding 0.5em
	line-height 1
