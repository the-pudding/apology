#beeswarm
	padding 1rem

	.beeswarm__graphic
		margin 0 auto
		max-width 80rem
		width 90%

	.graphic__chart
		position relative

	.graphic__title
		position absolute
		top 0
		left 0
		margin 0
		set-type-size(root)
		width 100%
		text-align center
		line-height 1

	.graphic__label
		position absolute
		top 0
		left 0
		display flex
		justify-content space-between
		margin 0
		width 100%
		transform translateY(175%)

		p
			padding 0
			color $gray
			set-type-size(x-small)
			margin 0
			text-align center
			text-transform uppercase
			line-height 1

	figure
		position relative
		margin 0 auto
		height 100%

	svg, .bees
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.axis
		fill none
		stroke $gray-light
		stroke-width 2px

	.bee
		position absolute
		border none
		border 1px solid $bg
		border-radius 50%
		background-color $secondary
		background-position center center
		cursor crosshair
		transform translate(-50%, -50%)

		&.is-beauty
			border 4px solid $primary

	.beeswarm__hovertext
		position fixed
		padding 0.5rem
		border 2px solid $bg
		border-radius 2%
		background-color $fg
		color $bg
		opacity 0
		transform translate(-50%, -120%)
		pointer-events none

	.beeswarm__hovertext__content
		set-type-size(small)
