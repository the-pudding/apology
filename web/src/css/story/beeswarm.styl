#beeswarm
	padding 1rem

	.beeswarm__graphic
		margin 0 auto
		max-width 80rem
		width 90%

	.graphic__chart
		position relative

	.graphic__title
		position absolute
		top 0
		left 0
		margin 0
		set-type-size(root)
		width 100%
		text-align center

	.graphic__label
		position absolute
		top 0
		left 0
		display flex
		justify-content space-between
		margin 0
		width 100%

		p
			padding 0 1rem
			color $gray
			set-type-size(x-small)
			text-align center
			text-transform uppercase

	figure
		position relative
		margin 0 auto
		height 100%

	svg, .bees
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.axis
		fill none
		stroke $gray-light
		stroke-width 2px

	.label
		font-size 15px

	.bee
		position absolute
		border none
		border 1px solid $bg
		border-radius 50%
		background-color $secondary
		background-position center center
		transform translate(-50%, -50%)

		&.is-beauty
			border 4px solid $primary

	.beeswarm__hovertext
		position fixed
		padding 0.5rem
		border-radius 2%
		box-shadow 0px 0px 2px
		opacity 0
		transform translate(-50%, -120%)
		pointer-events none

	.beeswarm__hovertext__content
		font-size 0.85rem
