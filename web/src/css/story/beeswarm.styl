#beeswarm
	padding 1rem

	.beeswarm__graphic
		margin 0 auto
		max-width 80rem
		width 100%

	figure
		position relative
		margin 0 auto
		width 80%

	svg, .bees
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.axis
		fill none
		stroke $gray-light
		stroke-width 2px

	.label
		font-size 15px

	.bee
		position absolute
		border solid 2px grey
		border-radius 50%
		background-color rgba(128, 128, 128, 0.4)
		background-position center center
		transform translate(-50%, -50%)

	.beeswarm__hovertext
		position fixed
		padding 0.5rem
		border-radius 2%
		background-color grey
		transform translate(-50%, 0)
		pointer-events none
		box-shadow: 0px 0px 2px