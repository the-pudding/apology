#category
	.category__graphic
		margin 0 auto
		width 100%

	figure
		display flex
		flex-wrap wrap
		justify-content center
		align-items flex-end
		margin 0 auto
		padding 1rem
		max-width 80rem

	.controversy
		position relative
		flex-grow 1
		margin-bottom 1rem

	.person
		+mq('bp-6')
			set-type-size(x-large)

	.is-label
		color $gray
		set-type-size(small)
		position absolute
		bottom 0
		left 0
		transform translateY(150%)

		+mq('bp-6')
			set-type-size(medium)

	.is-beauty.is-active
		color red