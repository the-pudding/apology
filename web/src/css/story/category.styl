#category
	.category__graphic
		margin 0 auto
		width 100%

	figure
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		margin 0 auto
		padding 1rem
		max-width 80rem

		+mq('bp-6')
			flex-direction row
			align-items flex-end

	.controversy
		position relative
		display flex
		flex-direction column
		flex-wrap wrap
		align-items flex-start
		align-content flex-start
		margin-bottom 1rem
		padding 0 0.5em
		max-height 6rem
		width 100%

		+mq('bp-6')
			display block
			flex-grow 1
			flex-direction column
			flex-wrap nowrap
			align-items flex-start
			align-content flex-start
			max-height 100%
			width auto

	.person p
		margin 0
		transition color $fade

		+mq('bp-6')
			set-type-size(large)

	.is-label
		position absolute
		top 100%
		left 0.5em
		transform translateY(0.5em)

		p
			color $gray
			set-type-size(small)
			line-height 1.25

			+mq('bp-6')
				set-type-size(root)

	.is-beauty.is-active
		p
			color $primary