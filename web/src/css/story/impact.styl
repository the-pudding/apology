#impact
	.impact__graphic
		position relative
		margin 0 auto
		max-width 80rem
		width 90%
		height 80vh

	figure
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		opacity 0
		transition opacity $fade ease-in-out

		&.is-visible
			opacity 1

	.graphic__zone
		position absolute
		top 0
		left 0
		height 100%
		background $off-white
		vertical-align middle
		text-align center
		opacity 0

		&.is-visible
			opacity 1

		.zone__label
			position absolute
			top 0
			left 0
			margin 0
			width 100%
			line-height 1

		span
			position absolute
			top 0
			left 0
			margin 0
			font-family $sans
			set-type-size(small)
			lin-height 1

			&:first-of-type
				text-align right
				transform translate(-50%, -100%)

			&:last-of-type
				right 0
				left auto
				text-align right
				transform translate(50%, -100%)

			&:after
				position absolute
				top 100%
				left 50%
				display block
				width 1px
				height 0.5rem
				background $fg
				content ''

	.person
		path
			fill none
			stroke $gray-light
			stroke-width 2px

		&.is-beauty path
			stroke $primary

