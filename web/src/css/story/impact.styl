	.g-axis
		.axis--y
			path
				display none

		.axis--y--bg
			line
				stroke-width 6px
				stroke $bg
				stroke-dasharray 3px 0px
				stroke-opacity 0.67

		.axis--y--fg
			line
				stroke-width 2px
				stroke $fg
				stroke-dasharray 4px 4px

		.text-comp--bg
			fill none
			stroke-width 2px
