#impact
	.graphic__title
		position absolute
		bottom 0
		left 0
		padding 1rem 0
		width 100%
		text-align center

	.impact__graphic
		position relative
		margin 0 auto
		max-width 80rem
		width 90%
		height 75vh

	figure
		position absolute
		top 0
		left 0
		width 100%
		height 95%
		opacity 0
		transition opacity $fade ease-in-out

		&.is-visible
			opacity 1
			transition opacity $fade 500ms ease-in-out

	.graphic__zone
		position absolute
		top 0
		left 0
		height 85%
		background linear-gradient(45deg, $off-white 25%, #eaeaea 25%, #eaeaea 50%, $off-white 50%, $off-white 75%, #eaeaea 75%)
		background-size 1rem 1rem
		vertical-align middle
		text-align center
		opacity 0
		transition opacity $fade ease-in-out

		&.is-visible
			opacity 1
			transition opacity $fade 500ms ease-in-out

		.zone__label
			position absolute
			top -0.75rem
			left 0
			margin 0
			width 100%
			line-height 1

		span
			position absolute
			top 0
			left 0
			margin 0
			font-family $sans
			set-type-size(x-small)
			padding 0 0.25em
			text-transform uppercase
			line-height 1

			&:first-of-type
				text-align right
				transform translate(-100%, 0%)

				&:before
					right -2px
					left auto

			&:last-of-type
				right 0
				left auto
				text-align left
				transform translate(100%, 0%)

				&:before
					left -2px

			&:before
				position absolute
				top 0
				display block
				width 2px
				height 0.75rem
				background #ddd
				content ''

	.person
		path
			fill none

		.path--bg
			stroke $bg
			stroke-width 3px
			stroke-opacity 0.75

			+mq('bp-6')
				stroke-width 4px

		.path--fg
			stroke $gray-light
			stroke-width 1px
			stroke-opacity 1

			+mq('bp-6')
				stroke-width 2px

		&.is-focus .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-focus .path--fg
			stroke $secondary
			stroke-opacity 1
			stroke-width 3px

			+mq('bp-6')
				stroke-width 4px

		&.is-beauty .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-beauty .path--fg
			stroke $primary
			stroke-opacity 1
			stroke-width 3px

			+mq('bp-6')
				stroke-width 4px

		&.is-cluster.cluster--1 .path--fg
			stroke-width 1px
			stroke $teal

			+mq('bp-6')
				stroke-width 2px

		&.is-cluster.cluster--0 .path--fg
			stroke-width 1px
			stroke $gray-light

			+mq('bp-6')
				stroke-width 2px

		&.is-cluster.cluster--neg1 .path--fg
			stroke-width 1px
			stroke $gray-light

			+mq('bp-6')
				stroke-width 2px

		&.is-cluster.cluster--neg2 .path--fg
			stroke-width 1px
			stroke $red

			+mq('bp-6')
				stroke-width 2px

		&.is-cluster.cluster--neg3 .path--fg
			stroke-width 1px
			stroke $red

			+mq('bp-6')
				stroke-width 2px

		&.is-focus-cluster.cluster--1 .path--fg
			stroke-width 3px
			stroke $teal

			+mq('bp-6')
				stroke-width 4px

		&.is-focus-cluster.cluster--0 .path--fg
			stroke-width 3px
			stroke $gray-light

			+mq('bp-6')
				stroke-width 4px

		&.is-focus-cluster.cluster--neg1 .path--fg
			stroke-width 3px
			stroke $gray-light

			+mq('bp-6')
				stroke-width 4px

		&.is-focus-cluster.cluster--neg2 .path--fg
			stroke-width 3px
			stroke $red

			+mq('bp-6')
				stroke-width 4px

		&.is-focus-cluster.cluster--neg3 .path--fg
			stroke-width 3px
			stroke $red

			+mq('bp-6')
				stroke-width 4px

		&.is-focus-cluster.cluster--1 .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-focus-cluster.cluster--0 .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-focus-cluster.cluster--neg1 .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-focus-cluster.cluster--neg2 .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		&.is-focus-cluster.cluster--neg3 .path--bg
			stroke-width 5px

			+mq('bp-6')
				stroke-width 6px

		text
			display none

		&.is-highlight, &.is-highlight.is-focus-cluster, &.is-highlight.is-cluster
			.path--fg
				stroke $secondary
				stroke-width 3px

				+mq('bp-6')
					stroke-width 4px

			.path--bg
				stroke-width 5px

				+mq('bp-6')
					stroke-width 6px

	.g-axis
		.axis--y
			path
				display none

		.axis--y--bg
			line
				stroke-width 6px
				stroke $bg
				stroke-dasharray 3px 0px
				stroke-opacity 0.67

		.axis--y--fg
			line
				stroke-width 2px
				stroke $fg
				stroke-dasharray 4px 4px

	.g-label
		.text-comp--bg
			fill none
			stroke-width 2px

	text
		font-size 12px

	select
		position absolute
		top 0
		right 28px
		z-index set-index(middle)
		font-weight bold
		font-family $sans
		pointer-events auto
		set-type-size(small)
		display none
		visibility hidden
		transform translateY(-100%)

		+mq('bp-3')
			display block

		&.is-visible
			visibility visible

		option
			font-weight bold
			font-family $sans
			pointer-events auto
			set-type-size(small)