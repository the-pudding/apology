#people
	figure
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	img
		position absolute
		top 150%
		left 50%
		max-width 20rem
		width 33%
		border 0.5rem solid $fg
		transition all 250ms ease-in-out
		transform translate(-50%, -50%)
		transform-origin center center

		&.is-visible
			top 50%

		&:nth-child(9)
			transform translate(-50%, -50%) rotate(5deg)

		&:nth-child(8)
			transform translate(-50%, -50%) rotate(3deg)

		&:nth-child(7)
			transform translate(-50%, -50%) rotate(-5deg)

		&:nth-child(6)
			transform translate(-50%, -50%) rotate(2deg)

		&:nth-child(5)
			transform translate(-50%, -50%) rotate(-4deg)

		&:nth-child(4)
			transform translate(-50%, -50%) rotate(5deg)

		&:nth-child(3)
			transform translate(-50%, -50%) rotate(-2deg)

		&:nth-child(2)
			transform translate(-50%, -50%) rotate(3deg)

		&:nth-child(1)
			transform translate(-50%, -50%) rotate(-2deg)