footer.pudding-footer
	margin-top 3rem
	padding 1rem 1rem

	+mq('bp-5')
		padding 3rem 1rem

	.footer-recirc
		margin 0 auto
		max-width 65rem

		&__articles
			display flex
			flex-wrap wrap
			justify-content space-between

		&__article
			display block
			margin-bottom 2rem
			width 100%
			border none

			img
				display none

			+mq('bp-5')
				margin-right 1.5rem
				width calc(25% - 1.5rem)

				&:last-of-type
					margin-right 0

				img
					display block

		.article__headline
			font-family $sans-display
			set-type-size(large, false)
			margin 0
			padding-left 0.5rem
			font-weight 700
			line-height 1

			+mq('bp-5')
				margin-bottom 2rem

	.footer-company
		display flex
		flex-direction column
		margin 0 auto
		margin-top 0rem
		max-width 65rem
		font-family $sans-display

		+mq('bp-5')
			flex-direction row
			margin-top 3rem

		&__cta
			order 1
			margin 2rem 0 0 0
			width 100%

			+mq('bp-5')
				margin 0 0 0 2rem
				width 22rem

		&__cta-list
			display flex
			flex-direction column
			flex-wrap wrap
			height 12rem

			+mq('bp-5')
				flex-direction column

			li
				display flex
				align-items center
				margin-bottom 1rem
				width 50%

				+mq('bp-5')
					padding-left 1rem

				a
					display flex
					border none

				p
					margin 0
					padding-top 0.1rem
					padding-left 0.5rem
					color $gray
					font-family $sans-display
					line-height 1

					+mq('bp-4')
						set-type-size(large)

				svg
					vertical-align middle
					fill $gray
					stroke none

					circle, polyline, line
						fill none
						stroke $gray

				.feather-mail path, .feather-lock path, .feather-rss path
					stroke $gray
					fill none

		&__about
			display flex
			flex-direction column
			order 0
			width 100%
			color $gray

			+mq('bp-5')
				width calc(100% - 24rem)

			p
				margin 0
				set-type-size(root, false)
				line-height 1.4

			svg
				margin-bottom 0.5rem
				width 12rem
